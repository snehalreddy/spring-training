<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="Insurance"
		table="hibernate_create_insert_update_delete">
		<id name="id" type="int" column="id"></id>
		<property name="policyNo" column="policy_no" type="int"></property>
		<property name="name" column="name" type="string"></property>
		<property name="amount" column="amount" type="int"></property>
	</class>
</hibernate-mapping>